<!doctype html>
  <html lang="en">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Dokterku</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    </head>
    <body>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Dokterku</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li>
                <a class="nav-link" href="#">Edit Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/disease">Disease</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/medicalRecords">Medical Record</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <center><h1>Medical Record Details</h1></center>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Patient Name</th>
            <th scope="col">Doctor Name</th>
            <th scope="col">Age</th>
            <th scope="col">Address</th>
            <th scope="col">Blood Type</th>
            <th scope="col">Diagnosis</th>
            <th scope="col">Treatment</th>
            <th scope="col">Date of Diagnosis</th>
            <th scope="col">Cost</th>
            <th scope="col">Disease</th>
          </tr>
        </thead>
        <tbody>
            <% records.forEach((el , index) => { %>
              <tr>
                  <th><%= ++index  %></th>
                  <td><%=fullName(users) %></td>
                  <td><%= el.doctorName %></td>
                  <td><%= users.UserProfile.getAge(users.UserProfile.dateOfBirth)%></td>
                  <td><%= users.UserProfile.city %></td>
                  <td><%= users.UserProfile.bloodType%></td>
                  <td><%= el.diagnosis %></td>
                  <td><%= el.treatment %></td>
                  <td><%= el.dateOfDiagnosis %></td>
                  <td><%=  formatIDR(el.cost) %></td>
                  <td><%=  diseases.name %></td>
                
                  </tr>
            <% }) %>
        </tbody>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>