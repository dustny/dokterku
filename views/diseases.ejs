<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dokterku</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <%- include('navbar/navbar') %>
    <center><h1 style="font-family: serif;font-size: 300%;">Diseases</h1></center>
    <center><a href="/disease/add" class="list-group-item list-group-item-action" role="button" style="color: rgb(12, 56, 215);font-size: large;font-family: 'Times New Roman';font-size: 150%"">Click here to Add New Disease</a></center>
    <br>
      <table class="table table-striped table-hover" >
          <thead>
            <tr class="table-dark" style="text-align: center;">
              <th scope="col">No</th>
              <th scope="col">Name of Diseases</th>
              <th scope="col">Description</th>
              <th scope="col">Level Of Danger</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% diseases.forEach((el,index) => { %>
              <tr>
                <td style="text-align: center;"><%= ++index%></td>
                <td style="text-align: center;"><%=el.name%></td>
                <td style="width: 800px;"><%=el.description%></td>
                <td style="text-align: center;"><%=el.level%></td>
                <td>
                  <center><a href="/disease/delete/<%=el.id%>" class="btn btn-outline-danger" role="button">Delete</a></center>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>