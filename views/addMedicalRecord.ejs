<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <center><h1>Add Medical Record</h1></center>
    <form class="row g-3" action="/medicalRecords/add" method="post">
        <% patients.forEach(el => { %>
            <div class="col-12 text-center">
                <label class="form-label">Full Name</label>
                <select name="id">
                    <option value="" disabled selected>--Select--</option>
                    <option value="<%= el.id%>"><%= fullName(el) %>
                </option>
                </select>
        <% }) %>
        <div class="col-12 text-center">
          <label class="form-label">BloodType</label>
          <center><select class="form-select" style="width: 400px" name="bloodType">
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="AB">AB</option>
            <option value="O">O</option>
            </select></center>
        </div>
        <div class="col-12 text-center">
          <label class="form-label">Address</label>
          <center><input type="text" class="form-control"  placeholder="City.." name="city" style="width: 400px"></center>
        </div>
        <center><button type="submit" class="btn btn-primary" value="Save" style="width: 200px">Save</button></center>
      </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>