<!doctype html>
  <html lang="en">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Dokterku</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    </head>
    <body>
      <center><h1 style="font-family: serif;font-size: 280%; text-align: center;">Add Medical Record</h1></center>
      <% if(errors){ %>
        <center><p style="color: red;"><%= errors %></p></center> 
      <% } %>
      <form class="row g-3" action="/medicalRecords/add" method="post">
          <div class="col-12 text-center">
              <label class="form-label" style="font-family: 'Times New Roman';font-size: larger;">Patient Id</label>
              <select name="UserId">
                  <option value="" disabled selected>--Select--</option>
          <% patients.forEach(el => { %>
                      <option value="<%= el.id%>"><%= fullName(el) %>
                  </option>
                  <% }) %>
              </select>
          </div>
          <div class="col-12 text-center">
              <label class="form-label" style="font-family: 'Times New Roman';font-size: larger;">Diseases</label>
              <select name="DiseaseId" >
                  <option value="" disabled selected>--Select--</option>
          <% diseases.forEach(el => { %>
                      <option value="<%= el.id%>"><%= el.name %>
                  </option>
                  <% }) %>
              </select>
          </div>
          <center><label class="form-label" style="font-family: 'Times New Roman';font-size: larger;">Diagnosis</label></center>
          <center>
              <textarea class="textarea" id="exampleFormControlTextarea1" rows="10" cols="50" name="diagnosis" placeholder="Description of Disease.."></textarea></center>
          </div>
          </div>
          <center><label class="form-label" style="font-family: 'Times New Roman';font-size: larger;">Treatment</label></center>
        <center>
            <textarea class="textarea" id="exampleFormControlTextarea1" rows="10" cols="50" name="treatment" placeholder="Treatment Notes.."></textarea></center>
        </div>
        <center><label class="form-label" style="font-family: 'Times New Roman';font-size: larger;">Price</label>
            <input type="number" class="form-control"  placeholder="Price" name="cost" style="width:400px"></center>
        <div class="col-12 text-center">
            <label class="form-label" style="font-family: 'Times New Roman';font-size: larger;">Date Of Diagnosis</label>
            <center><input type="date" class="form-control"  placeholder="Date of Diagnosis.." name="dateOfDiagnosis" style="width:400px"></center>
        </div>
        <div class="col-12 text-center">
          <label class="form-label" style="font-family: 'Times New Roman';font-size: larger;">Doctor Name</label>
          <select name="doctorName">
              <option value="" disabled selected>--Select--</option>
      <% doctors.forEach(el => { %>
                  <option value="<%= fullName(el)%>"><%= fullName(el) %>
              </option>
              <% }) %>
          </select>
      </div>
        <center><button type="submit" class="btn btn-primary" value="Save" style="width: 200px">Save</button></center>
      </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>