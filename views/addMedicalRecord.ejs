<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <center><h1>Add Medical Record</h1></center>
    <form class="row g-3" action="/medicalRecords/add" method="post">
        <div class="col-12 text-center">
            <label class="form-label">Patient Id</label>
            <select name="UserId">
                <option value="" disabled selected>--Select--</option>
        <% patients.forEach(el => { %>
                    <option value="<%= el.id%>"><%= el.UserProfile.firstName %>
                </option>
                <% }) %>
            </select>
        </div>
        <div class="col-12 text-center">
            <label class="form-label">Diseases</label>
            <select name="DiseaseId" >
                <option value="" disabled selected>--Select--</option>
        <% diseases.forEach(el => { %>
                    <option value="<%= el.id%>"><%= el.name %>
                </option>
                <% }) %>
            </select>
        </div>
        <center><label class="form-label">Diagnosis</label></center>
        <center>
            <textarea class="textarea" id="exampleFormControlTextarea1" rows="10" cols="50" name="diagnosis" placeholder="Description of Disease.."></textarea></center>
        </div>
        </div>
        <center><label class="form-label">Treatment</label></center>
        <center>
            <textarea class="textarea" id="exampleFormControlTextarea1" rows="10" cols="50" name="treatment" placeholder="Treatment Notes.."></textarea></center>
        </div>
        <center><label class="form-label">Price</label>
            <input type="number" class="form-control"  placeholder="Price" name="cost" style="width:400px"></center>
        <div class="col-12 text-center">
            <label class="form-label">Date Of Diagnosis</label>
            <center><input type="date" class="form-control"  placeholder="Date of Diagnosis.." name="dateOfDiagnosis" style="width:400px"></center>
        </div>
        <center><label class="form-label">Doctor Name</label>
            <input type="text" class="form-control"  placeholder="Doctor Name" name="doctorName" style="width:400px"></center>
        <center><button type="submit" class="btn btn-primary" value="Save" style="width: 200px">Save</button></center>
      </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>